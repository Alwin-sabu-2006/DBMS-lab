delete from employee2 where emp_id=3;

select * from employee2 where emp_name not like 'D%' and emp_name not like '0%';


select sum(salary) as Total_salry_Expense, dept2 from employee2 group by dept2;


update employee2 set salary=salary+(salary*(5/100)) where dept2='Production';

