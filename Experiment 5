create table orders(OrderID int primary key , CustomerID int , EmployeeID int , OrderDate Date , ShipperID int ,foreign key(CustomerID) references Customer,foreign key(EmployeeID) references Employee5);
create table Employee5(EmployeeID int primary key, FirstName varchar(30) ,LastName varchar(30), BirthDate Date ,Photo varchar(30));
