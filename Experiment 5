select * from customer order by CustomerName;
 select * from orders order by OrderDate;
 
 select *  from Employee5 where Birthdate > '30/12/1980' order by BirthDate;  

select distinct(OrderDate),CustomerName  from Customer,orders  where Country='USA' order by OrderDate desc;
select * from orders;
select * from Orders
WHERE CustomerID IN  (
    SELECT CustomerID
    FROM Customer
    WHERE Country = 'USA'
)
ORDER BY OrderDate DESC;

select count(orderid),CustomerName from orders,Customer group by CustomerName;
SELECT c.CustomerName, COUNT(o.OrderID) AS TotalOrders
FROM Customer c
JOIN Orders o ON c.CustomerID = o.CustomerID
GROUP BY c.CustomerID, c.CustomerName;







